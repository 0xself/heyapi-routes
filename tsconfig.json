{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}
